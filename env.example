# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# SerpApi Configuration (Google Product Search)
SERPAPI_API_KEY=your_serpapi_api_key_here

# Development Mode (optional)
SKIP_OPENAI_API=false

# Database Configuration
DATABASE_URL="file:./dev.db"

# Next.js Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# NextAuth.js 配置
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# Google OAuth (可选)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Redis 配置
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_DB="0"
REDIS_KEY_PREFIX="giftpop:"

# 推荐引擎配置
REC_WEIGHT_CATEGORY="0.25"
REC_WEIGHT_PRICE="0.20"
REC_WEIGHT_RATING="0.15"
REC_WEIGHT_POPULARITY="0.10"
REC_WEIGHT_OCCASIONS="0.15"
REC_WEIGHT_INTERESTS="0.10"
REC_WEIGHT_DEMOGRAPHICS="0.05"
REC_DIVERSITY_FACTOR="0.3"
REC_MAX_RESULTS="20"

# 外部服务配置
SENTRY_DSN=""
SENTRY_ORG=""
SENTRY_PROJECT=""

# 文件存储配置 (可选)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET=""

# 邮件服务配置 (可选)
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@giftpop.com"

# 应用配置
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api/v1"

# 限流配置
RATE_LIMIT_ANONYMOUS="100"  # 匿名用户每分钟请求数
RATE_LIMIT_AUTHENTICATED="1000"  # 认证用户每分钟请求数

# 缓存配置
CACHE_DEFAULT_TTL="300"  # 默认缓存时间（秒）
CACHE_POPULAR_TTL="600"  # 热门内容缓存时间（秒）

# 图片处理配置
NEXT_PUBLIC_IMAGE_DOMAIN="images.giftpop.com"
IMAGE_QUALITY="80"
IMAGE_SIZES="640,750,828,1080,1200,1920"

# 分析工具配置 (可选)
NEXT_PUBLIC_GA_ID=""
NEXT_PUBLIC_HOTJAR_ID=""

# 开发工具配置
ANALYZE="false"  # 设置为 true 启用 bundle 分析
